{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "isolatedModules": true,
    "moduleResolution": "Node",
    "importHelpers": true
  },
  "include": ["src", "custom.d.ts"],
  "exclude": ["node_modules"]
}
